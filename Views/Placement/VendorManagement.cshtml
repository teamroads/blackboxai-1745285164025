@{
    ViewData["Title"] = "Vendor Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-3xl font-semibold mb-6">Vendor Management</h2>

@if (ViewBag.Message != null)
{
    <div class="mb-4 p-4 bg-green-100 text-green-700 rounded">
        @ViewBag.Message
    </div>
}

<form asp-action="VendorManagement" method="post" enctype="multipart/form-data" class="space-y-6 max-w-3xl">
    <div>
        <label for="vendorName" class="block font-medium text-gray-700">Vendor Name</label>
        <input type="text" name="vendorName" id="vendorName" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="feid" class="block font-medium text-gray-700">FEID or Canada Business Number</label>
        <input type="text" name="feid" id="feid" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="address" class="block font-medium text-gray-700">Address</label>
        <input type="text" name="address" id="address" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="contactPerson" class="block font-medium text-gray-700">Contact Person</label>
        <input type="text" name="contactPerson" id="contactPerson" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="emailId" class="block font-medium text-gray-700">Email Id</label>
        <input type="email" name="emailId" id="emailId" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="phoneNumber" class="block font-medium text-gray-700">Phone Number</label>
        <input type="tel" name="phoneNumber" id="phoneNumber" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="signingAuthorityName" class="block font-medium text-gray-700">Name of Signing Authority</label>
        <input type="text" name="signingAuthorityName" id="signingAuthorityName" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="signingAuthorityEmail" class="block font-medium text-gray-700">Email Id of Signing Authority</label>
        <input type="email" name="signingAuthorityEmail" id="signingAuthorityEmail" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="signingAuthorityPhone" class="block font-medium text-gray-700">Phone number of Signing Authority</label>
        <input type="tel" name="signingAuthorityPhone" id="signingAuthorityPhone" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" />
    </div>

    <div>
        <label for="msaFile" class="block font-medium text-gray-700">Vendor MSA (PDF or DOC)</label>
        <input type="file" name="msaFile" id="msaFile" accept=".pdf,.doc,.docx" class="mt-1 block w-full text-gray-700" />
    </div>

    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Save</button>
</form>
